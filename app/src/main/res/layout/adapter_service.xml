<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/margin_5"
    android:layout_marginBottom="@dimen/activity_margin"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_name"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_16"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_unit"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/txt_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_16"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_rate"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/txt_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_16"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/applied_from"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/txt_applied_from"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_16"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_rate_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/applied_to"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/txt_applied_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_16"
                android:textStyle="bold" />

        </LinearLayout>
        <Button
            android:id="@+id/btn_discontinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discontinue" />
    </LinearLayout>


</android.support.v7.widget.CardView>
